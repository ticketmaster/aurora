{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier", "prettier/react"],
  "env": { "jest": true },
  "rules": {
    "react/jsx-filename-extension": ["error", { "extensions": [".js"] }],
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["**/*.spec.js", "catalog/**/*", "config/**/*"] }
    ]
  },
  "globals": {
    "document": true
  }
}
